<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-t] %-15c{1.}: %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="app" level="info"/>
        <Logger name="app.infrastructure" level="info"/>

        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>